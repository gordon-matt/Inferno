        <Field Horizontal="true">
            <FieldLabel For="NumberOfCategories" ColumnSize="ColumnSize.Is3">@T[InfernoCmsLocalizableStrings.ContentBlocks.CategoriesBlock.NumberOfCategories]</FieldLabel>
            <FieldBody ColumnSize="ColumnSize.Is9">
                <RadzenNumeric @bind-Value="Model.NumberOfCategories" Style="width:100%" />
            </FieldBody>
        </Field>
    </Column>
</Row>